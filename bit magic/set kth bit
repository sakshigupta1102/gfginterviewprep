import java.util.*;
import java.lang.*;
import java.io.*;

class GFG {
	public static void main (String[] args) {
		Scanner scan= new Scanner(System.in);
	    int t=scan.nextInt();
	    while(t>0){
	        int n=scan.nextInt();
	        int k=scan.nextInt();
	        System.out.println(n| (1<<k));
	        
	        
	        
	        
	        t--;
	    }
	}
}
